<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>service-catalog</portlet-name>
		<icon>/icon.png</icon>
        <configuration-action-class>ru.lanit.samara.portlet.logic.ConfigController</configuration-action-class>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
        <header-portlet-javascript>/js/jquery-1.9.1.js</header-portlet-javascript>
        <header-portlet-javascript>/js/ui/jquery.ui.core.js</header-portlet-javascript>
        <header-portlet-javascript>/js/ui/jquery.ui.widget.js</header-portlet-javascript>
        <header-portlet-javascript>/js/ui/jquery.ui.accordion.js</header-portlet-javascript>
        <footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>service-catalog-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>